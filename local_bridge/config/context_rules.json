{
  "version": "1.0",
  "description": "Context recognition rules for automatic preset selection",
  "contexts": {
    "backlit_portrait": {
      "description": "逆光ポートレート - 夕方の屋外人物撮影",
      "conditions": [
        {"field": "settings.iso", "operator": ">", "value": 400},
        {"field": "settings.focal_length", "operator": "between", "value": [35, 85]},
        {"field": "context_hints.time_of_day", "operator": "in", "value": ["golden_hour_evening", "golden_hour_morning"]},
        {"field": "location.location_type", "operator": "==", "value": "outdoor"}
      ],
      "weights": [0.3, 0.2, 0.3, 0.2],
      "recommended_preset": "WhiteLayer_Transparency_v4",
      "preset_blend": 60
    },
    "low_light_indoor": {
      "description": "室内低照度 - 高ISO室内撮影",
      "conditions": [
        {"field": "settings.iso", "operator": ">", "value": 1600},
        {"field": "location.has_gps", "operator": "==", "value": false},
        {"field": "context_hints.lighting", "operator": "in", "value": ["low_light", "very_low_light"]}
      ],
      "weights": [0.4, 0.3, 0.3],
      "recommended_preset": "LowLight_NR_v2",
      "preset_blend": 80
    },
    "landscape_sky": {
      "description": "風景・空 - 広角での風景撮影",
      "conditions": [
        {"field": "settings.focal_length", "operator": "<", "value": 35},
        {"field": "location.location_type", "operator": "==", "value": "outdoor"},
        {"field": "context_hints.time_of_day", "operator": "in", "value": ["morning", "afternoon", "golden_hour_evening", "golden_hour_morning"]},
        {"field": "settings.iso", "operator": "<", "value": 800}
      ],
      "weights": [0.3, 0.2, 0.3, 0.2],
      "recommended_preset": "Landscape_Vivid_v3",
      "preset_blend": 70
    },
    "night_cityscape": {
      "description": "夜景・都市 - 夜間の都市風景",
      "conditions": [
        {"field": "context_hints.time_of_day", "operator": "in", "value": ["night", "evening"]},
        {"field": "settings.iso", "operator": ">", "value": 800},
        {"field": "settings.focal_length", "operator": "<", "value": 50},
        {"field": "location.location_type", "operator": "==", "value": "outdoor"}
      ],
      "weights": [0.35, 0.25, 0.2, 0.2],
      "recommended_preset": "Night_City_v2",
      "preset_blend": 75
    },
    "blue_hour_landscape": {
      "description": "ブルーアワー風景 - 日の出前/日没後の風景",
      "conditions": [
        {"field": "context_hints.time_of_day", "operator": "in", "value": ["blue_hour_morning", "blue_hour_evening"]},
        {"field": "settings.focal_length", "operator": "<", "value": 50},
        {"field": "location.location_type", "operator": "==", "value": "outdoor"}
      ],
      "weights": [0.5, 0.3, 0.2],
      "recommended_preset": "BlueHour_Cool_v1",
      "preset_blend": 65
    },
    "indoor_portrait": {
      "description": "室内ポートレート - 室内での人物撮影",
      "conditions": [
        {"field": "settings.focal_length", "operator": "between", "value": [35, 135]},
        {"field": "location.has_gps", "operator": "==", "value": false},
        {"field": "settings.iso", "operator": "between", "value": [400, 3200]},
        {"field": "context_hints.lighting", "operator": "in", "value": ["moderate_light", "low_light"]}
      ],
      "weights": [0.3, 0.2, 0.3, 0.2],
      "recommended_preset": "Indoor_Portrait_v3",
      "preset_blend": 70
