    "sports_action": {
      "description": "スポーツ・動体 - 高速シャッターでの動体撮影",
      "conditions": [
        {"field": "settings.shutter_speed", "operator": "shutter_faster_than", "value": "1/500"},
        {"field": "settings.focal_length", "operator": ">", "value": 70},
        {"field": "settings.iso", "operator": ">", "value": 400}
      ],
      "weights": [0.4, 0.3, 0.3],
